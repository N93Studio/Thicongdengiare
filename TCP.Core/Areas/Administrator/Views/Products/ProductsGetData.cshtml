                                    success: function (result) {

                                    }
                                });
                            }

                        }
                    }
                });
                //
                var param =
                {
                    "ProductID": id
                }

                $.ajax({
                    url: '/Administrator/Products/ProductsDelete',
                    data: param,
                    dataType: 'text',
                    type: 'POST',
                    cache: false,
                    success: function (result) {
                        window.location.reload();
                    }
                });
            }, cancelEvent: function () { }, cancelButton: 'Không'
        })


    }


